<script type="text/javascript">
    $(document).ready(function () {
        
        $("#ActionType").attr('selectedIndex', 0);
        $("#ActionType").click(function () {
            if ($('#ActionType option:selected').text() == "Select")
            {
                $("#txtActionName").val("");
            }
            else
                {
                $("#txtActionName").val($('#ActionType option:selected').text());
            }
           
        });
    });
</script>


