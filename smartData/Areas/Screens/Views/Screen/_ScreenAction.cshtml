                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            Action Type
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownList("ActionType", (IEnumerable<SelectListItem>)ViewBag.ActionType, new { @class = "col-sm-8 customDropDown" })
