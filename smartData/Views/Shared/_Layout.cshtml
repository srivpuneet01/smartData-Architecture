<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @System.Web.Optimization.Styles.Render("~/bundles/css")
@if (IsSectionDefined("CSSLinks"))
{
    @RenderSection("CSSLinks")
}
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryvalidate")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
    @System.Web.Optimization.Scripts.Render("~/bundles/commonjs")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    @{Html.RenderPartial("~/Views/Shared/UrlVariables.cshtml");}
@if (IsSectionDefined("JSRefernces"))
{

    @RenderSection("JSRefernces")
}
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { Area = "" }, new { @class = "navbar-brand" })
            </div>
            @{
                if (@User.Identity.IsAuthenticated)
                {
                   <div class="navbar-right"><strong class="fontwhite">Hello! @User.Identity.Name</strong></div>
            <br />
            <ul class="nav nav-tabs">
                <li class="">@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, new { })</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Master <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Users", "Index", "Users", new { Area = "Users" }, new { })</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles", new { Area = "Roles" }, new { })</li>
                        <li>@Html.ActionLink("Screens", "Index", "screen", new { Area = "screens" }, new { })</li>
                        <li>@Html.ActionLink("Modules", "Index", "Modules", new { Area = "Modules" }, new { })</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Permission <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Screen", "Index", "ScreenPermissions", new { Area = "ScreenPermissions" }, new { })</li>
                        <li>@Html.ActionLink("Module", "AddModulePermission", "ModulePermission", new { Area = "ModulePermissions" }, new { })</li>
                    </ul>
                </li>
                
                <li class="">@Html.ActionLink("Audit Log", "LogIndex", "LogInfo", new { Area = "LogInfo" }, new { })</li>
                <li class="">@Html.ActionLink("ChangePassword", "ForgotPassword", "Account", new { Area = "" }, new { })</li>                
                <li class="navbar-right">
                    <ul class="navbar-right">
                        <li>@Html.ActionLink("Log Out", "LogOut", "Account", new { Area = "" }, null)</li>
                    </ul>
                </li>
            </ul>
            }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    </ul>
            }
            }
        </div>
    </div>
    <input id="HiddenHostName" type="hidden" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - smartData</p>
        </footer>
    </div>
</body>
</html>
