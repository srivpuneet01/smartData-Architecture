
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>

        @if (IsSectionDefined("Title"))
        {
            @RenderSection("Title")
        }
    </title>
   @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("CSSLinks"))
    {
        @RenderSection("CSSLinks")
    }
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")


    @if (IsSectionDefined("JSRefernces"))
    {
        @RenderSection("JSRefernces")
    }

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new {Area = "" }, new { @class = "navbar-brand" })
            </div>
            @{
                if (@User.Identity.IsAuthenticated)
                {
                   <div class="navbar-right"><strong style="color:white;">Hello! @User.Identity.Name</strong></div><br/>

                    <ul class="nav nav-tabs">

                        <li class="active">@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, new { })</li>
                        <li class="dropdown ">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Master <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Users", "Index", "Users", new { Area = "Users" }, new { })</li>
                                <li>@Html.ActionLink("Roles", "Index", "Roles", new { Area = "Roles" }, new { })</li>
                                <li>@Html.ActionLink("Screen", "Index", "screen", new { Area = "screens" }, new { })</li>
                                <li>@Html.ActionLink("Module", "Index", "Modules", new { Area = "Modules" }, new { })</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Permission <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Screen", "Index", "ScreenPermissions", new { Area = "ScreenPermissions" }, new { })</li>
                                <li>@Html.ActionLink("Module", "AddModulePermission", "ModulePermission", new { Area = "ModulePermissions" }, new { })</li>

                            </ul>
                        </li>
                        <li>@Html.ActionLink("Patients", "Index", "Patients", new { Area = "Patients" }, new { })</li>
                        <li>@Html.ActionLink("Scheduler", "Index", "Scheduler", new { Area = "Scheduler" }, new { })</li>
                        <li>@Html.ActionLink("Scanned Records", "Sacnnedmedicalrecords", "Home", new { Area = "scan" }, new { })</li>
                        <li>@Html.ActionLink("Audit Log", "LogIndex", "LogInfo", new { Area = "LogInfo" }, new { })</li>
                        <li>@Html.ActionLink("ChangePassword", "ForgotPassword", "Account", new { Area = "" }, new { })</li>
                        <li class="navbar-right">
                            <ul class="navbar-right">
                              
                                <li>@Html.ActionLink("Log Out", "LogOut", "Account", new { Area = "" }, null)</li>
                            </ul>
                        </li>


                    </ul>

                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    </ul>

                }
            }

        </div>
    </div>
    <input id="HiddenHostName" type="hidden" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - smartData</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)


</body>
</html>
