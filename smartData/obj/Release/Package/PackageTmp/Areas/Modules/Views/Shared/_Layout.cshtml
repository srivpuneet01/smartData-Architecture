
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>

        @if (IsSectionDefined("Title"))
        {
            @RenderSection("Title")
        }
    </title>
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("CSSLinks"))
    {
        @RenderSection("CSSLinks")
    }
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")


    @if (IsSectionDefined("JSRefernces"))
    {
        @RenderSection("JSRefernces")
    }

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { Area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Home", "Account", new { Area = "" }, new { })</li>
                        <li>@Html.ActionLink("About", "About", "Account", new { Area = "" }, new { })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Account", new { Area = "" }, new { })</li>*@
                    <li>@Html.ActionLink("Users", "Index", "Users", new { Area = "Users" }, new { })</li>
                    <li>@Html.ActionLink("Patients", "Index", "Patients", new { Area = "Patients" }, new { })</li>
                    <li>@Html.ActionLink("Scheduler", "Index", "Scheduler", new { Area = "Scheduler" }, new { })</li>
                    <li>@Html.ActionLink("Audit Log", "LogIndex", "LogInfo", new { Area = "LogInfo" }, new { })</li>
                    <li>@Html.ActionLink("ChangePassword", "ForgotPassword", "Account", new { Area = "" }, new { })</li>
                    <li>@Html.ActionLink("Roles", "Index", "Roles", new { Area = "Roles" }, new { })</li>
                    <li>@Html.ActionLink("Screen", "Index", "screen", new { Area = "screens" }, new { })</li>
                    <li>@Html.ActionLink("ScreenPermissions", "Index", "ScreenPermissions", new { Area = "ScreenPermissions" }, new { })</li>
                </ul>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li> <strong style="color:white;line-height:20px;">Hello! @User.Identity.Name</strong></li>
                            <li>@Html.ActionLink("Log Out", "LogOut", "Account", new { area = "" }, null)</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                        </ul>
                    }
                }


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - smartData</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)


</body>
</html>
