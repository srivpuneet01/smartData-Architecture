                table += '<th data-field="ActionId">Action Name</th>';
                table += '<th data-field="ActionId"></th>';
                table += '</tr>';
             //   <th data-field="ActionId">Action ID</th>
                $.each(data, function(i, item) {
                    table += '<tr>';
